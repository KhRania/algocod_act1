#!/usr/bin/env python

import rospy
from geometry_msgs.msg import Twist


def vitesse():
    #Starts a new node
    rospy.init_node('robot_cleaner', anonymous=True)
    velocity_publisher = rospy.Publisher('/turtle1/cmd_vel', Twist, queue_size=10)
    vel_msg = Twist()
    
    v_max=rospy.get_param("max") 
    v_min=rospy.get_param("min") 
  
    v_donne = input("write your speed:")
    while v_donne >= v_max:
     v_donne = input("Too fast write again your speed :")
     break
    while v_donne <= v_min:
     v_donne = input("Too slow write again your speed :")
     break
   
    print ("your speed is perfect")
    print v_donne
      
    #use linear components
    vel_msg.linear.x=v_donne
    vel_msg.linear.y=0
    vel_msg.linear.z=0
    vel_msg.angular.x = 0
    vel_msg.angular.y = 0
  
   
    while not rospy.is_shutdown():
      velocity_publisher.publish(vel_msg)
        
    #Forcing our robot to stop
    vel_msg.angular.z = 0
    velocity_publisher.publish(vel_msg)
    rospy.spin()

if __name__ == '__main__':
    try:
        # Testing our function
        vitesse()
    except rospy.ROSInterruptException:
        pass
